{
    "name": "pushover-activity",
    "version": "1.0.0",
    "author": "Justin Mirfield",
    "type": "flogo:activity",
    "title": "Pushover Activity",
    "description": "Send pushover requests",
    "settings": [
       {
           "name": "appToken",
           "type": "string",
           "required": true,
           "description" : "app token provided by pushover"
       },
       {
            "name": "groupToken",
            "type": "string",
            "required": true,
            "description" : "group/user token provided by pushover"
        },
        {
            "name": "active",
            "type": "boolean",
            "required": true,
            "description" : "does not send request if set to false"
        }
    ],
    "inputs": [
        {
            "name": "message",
            "type": "string",
            "required": true
        }
    ],
    "outputs": [
        {
            "name": "status",
            "type": "number"
        }
    ]
}